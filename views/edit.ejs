<% include ../views/partials/header %>

    <div class="col-md-6">
        <div class="card card-body">
            <form method="post" action="/edit/<%= todo._id%>?_method=PUT">
            <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label>Todo Name</label>
                    <input class="form-control" type="text" name="text" value="<%=todo.text%>">
                </div>
                <div class="form-group">
                    <label>Todo Body</label>
                    <textarea class="form-control" name="body"><%=todo.body%></textarea>
                </div>
                <button class="btn btn-primary" type="submit">Submit</button> <a class="btn btn-danger" href="/">Cancel</a>
            </form>
        </div>
    </div>


<% include ../views/partials/footer %>